
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/red">




    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="6dp"
            android:text="White"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="#616161"
            />

        <TextView
            android:id="@+id/scoreTeamA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="6dp"
            android:text="0"
            android:textSize="40sp"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:gravity="center"
            android:onClick="addNineForTeamA"
            android:text="queen" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:onClick="addFiveForTeamA"
            android:text="Rook" />

        <Button
            android:id="@+id/wbishop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:onClick="addThreeForTeamA"
            android:text="bishop/knight" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:onClick="addOneForTeamA"
            android:text="pawn"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/text_view_countdown_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:text="00:00"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="60sp" />

        <Button
            android:id="@+id/button_start_pause_A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="timerA"
            android:text="start_timer" />

        <Button
            android:id="@+id/button_reset_A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="reset timer"
            android:visibility="invisible"
            tools:visibility="visible"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="6dp"
            android:text="Black"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="#616161"
            />

        <TextView
            android:id="@+id/team_b_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="6dp"
            android:text="0"
            android:textSize="40sp"
            android:textColor="#000000"/>/>

        <Button
            android:id="@+id/button3b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:gravity="center"
            android:onClick="addNineForTeamB"
            android:text="queen"
            />

        <Button
            android:id="@+id/button2b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:onClick="addFiveForTeamB"
            android:text="rook" />

        <Button
            android:id="@+id/bbishop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:onClick="addThreeForTeamB"
            android:text="bishop/knight" />

        <Button
            android:id="@+id/button1b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:onClick="addOneForTeamB"
            android:text="pawn"
            android:textAllCaps="true"/>


        <TextView
            android:id="@+id/text_view_countdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:text="00:00"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="60sp" />

        <Button
        android:id="@+id/button_start_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start timer"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/button_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="reset timer"
            android:visibility="invisible"
            tools:visibility="visible"/>



    </LinearLayout>

</LinearLayout>

        
        <Button
            android:id="@+id/buttonReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="RESET score"
            android:onClick="resetScore"/>

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_centerInParent="true">
    </View>

</RelativeLayout>